html
  background: white
  color: FOREGROUND
  font: 400 15px/1.5 "Open Sans", "Gill Sans", Arial, sans-serif

hr
  border: 0 solid rgba(gray, 0.5)
  border-top-width: 1px
  margin: 1em 0

a
  color: MAIN_HIGHLIGHT

  &:not([href]),
  &[href=""]
    opacity: 0.5

.emoji
  max-height: 1em

h1,
h2,
h3,
h4
  font-smoothing: antialiased
  font-weight: bold
  margin: 0

img
  &:not([src]),
  &[src=""]
    background-stripes: black yellow 20%
