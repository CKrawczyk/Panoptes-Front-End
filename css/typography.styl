html
  background: white
  color: FOREGROUND
  font: 400 15px/1.5 "Open Sans", "Gill Sans", Arial, sans-serif

.attribution
  font-size: 0.7em
  opacity: 0.7
  text-align: center

  &:last-child
    column-span: all

.figure
  position: relative

  > p > img
    margin: 0 0.5em
    max-width: 100%
    position: relative

    + strong
      background: rgba(black, 0.7)
      bottom: 0
      color: white
      font-size: 0.7em
      font-weight: bold
      left: 50%
      line-height: 1
      padding: 0.1em 0.5em
      position: absolute
      transform: translateX(-50%)

.partners
  text-align: center

  &:last-child
    column-span: all

  img
    margin: 0 0.5em
    max-width: 100%
    vertical-align: middle

hr
  border: 0 solid rgba(gray, 0.5)
  border-top-width: 1px
  margin: 1em 0

a
  color: MAIN_HIGHLIGHT

.standard-table
  border-spacing: 0

  th,
  td
    padding: 0.2em 1vw
    text-align: left
    vertical-align: top

  tr:not(:last-child)
    > th
    > td
      border-bottom: 1px solid

  &:not([href]),
  &[href=""]
    opacity: 0.5

.emoji
  max-height: 1em

h1,
h2,
h3,
h4
  font-smoothing: antialiased
  font-weight: bold
  margin: 0

img
  &:not([src]),
  &[src=""]
    background-stripes: lighten(MAIN_HIGHLIGHT, 20%) darken(SECOND_HIGHLIGHT, 20%) 20%

pre
  margin: 0
